{
	"compilerOptions": {
		"target": "ESNext",
		"module": "commonjs",
		"rootDir": "./src",
		"outDir": "./build/",
		"strict": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"forceConsistentCasingInFileNames": true,
		"removeComments": true,
		"typeRoots": ["node_modules/@types"],
		"sourceMap": false,
		"baseUrl": "./",
		"allowJs": true
	},
	"files": ["src/index.ts"],
	"include": ["./**/*.ts", "src/helper/feature-flags.ts"],
	"exclude": ["node_modules", "build"]
}
